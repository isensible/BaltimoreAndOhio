                            VerticalAlignment="Center"
                            Text="{Binding Label}" />
                            </Grid>
                            </DataTemplate>
                            </Setter.Value>
                            </Setter>
                            </DataTrigger>
                        -->

                    </Style.Triggers>
                </Style>
            </ListBox.ItemContainerStyle>

        </ListBox>

